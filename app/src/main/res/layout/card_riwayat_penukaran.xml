<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_riwayat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pjs_regular"
            android:text="Selasa, 12 Januari 2024"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_jenis_sampah"
            android:text="Botol Bekas"
            android:fontFamily="@font/pjs_semibold"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txt_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_total_sampah"
            android:text="a kg x Rp5,000 = Rp5,000"
            android:fontFamily="@font/pjs_regular"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txt_jenis_sampah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/txt_status"
            android:text="Sampah telah diterima"
            android:fontFamily="@font/pjs_semibold"
            android:textSize="14sp"
            android:clickable="false"
            android:layout_marginTop="20dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/txt_total_sampah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ubah_status"
            android:text="Ubah Status"
            android:textSize="14sp"
            android:fontFamily="@font/pjs_semibold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>